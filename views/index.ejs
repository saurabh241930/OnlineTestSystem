<!DOCTYPE html>
<html lang="en">
<head>
  <title>T-shirt Store</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:900" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */ 
    .navbar {
      margin-bottom: 0px;
      border-radius: 0;
      font-family: 'Nunito', sans-serif;
    }
    
    /* Remove the jumbotron's default bottom margin */ 
     .jumbotron {
      margin-bottom: 0;
    }
   
    /* Add a gray background color and some padding to the footer */
    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }
  </style>
</head>
<body>

 <%if(currentUser){%>
  <%if(currentUser.username === "Admin"){%>
  <div style="text-align:center">
     <a style="" href="/adminPortal"><span style="background-color:red;
                                                  color:white;
                                                  font-family: 'Nunito', sans-serif;
                                                  font-size:20px;
                                                  padding:50px;">Go to Admin Portal</span></a>
  </div>
 
<%}%>
 <%}%>
  

<nav style="background-color:black;" class="navbar fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="#">Logo</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="active"><a  id="navLinks" href="#">Home</a></li>
        <li><a  id="navLinks" href="#">Products</a></li>
        <li><a id="navLinks" href="#">Deals</a></li>
        <li><a id="navLinks" href="#">Stores</a></li>
        <li><a id="navLinks" href="#">Contact</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        
      
        
        <li><a id="navLinks" href="/register"><span class="glyphicon glyphicon-user"></span>  
          <%if(!currentUser){%>Sign Up</a></li>
         <li><a id="navLinks" href="/login"><span class="glyphicon glyphicon-user"></span>  
             Login</a></li>
           <%}else{%>
        <%=currentUser.username%>
       <li><a id="navLinks" href="logout"><span class="glyphicon glyphicon-user"></span>Logout</a></li>
         <li><a id="navLinks" href="/myOrders"><span class="glyphicon glyphicon-shopping-cart"></span> My Orders (<%=currentUser.Orders.length%>)</a></li>
        <li><a id="navLinks" href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart (<%=currentUser.ProductInCart.length%>)</a></li>
        <%}%>
        
      </ul>
    </div>
  </div>
</nav>
  
  
  <style>
    #navLinks:hover{
      color:white;
      background-color:black;
      
    }
  </style>
  
  
  <!--  Carousel  -->
  
  
 <div>
   
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="http://cdn.mintees.com.s3.amazonaws.com/files/tees/845/368754/800x400-gdwb-mintees.jpg" alt="Los Angeles" style="width:100%;">
      </div>

      <div class="item">
        <img src="http://cdn.mintees.com.s3.amazonaws.com/files/tees/845/368754/800x400-gdwb-mintees.jpg" alt="Chicago" style="width:100%;">
      </div>
    
      <div class="item">
        <img src="http://cdn.mintees.com.s3.amazonaws.com/files/tees/845/368754/800x400-gdwb-mintees.jpg" alt="New york" style="width:100%;">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
  
  
  <!--  Carousel  -->
  
  
  
  
  
  
  
  
  
  
  
  

<div>    
  <div class="row">
    <%products.forEach(function(product){%>
  <div style="border-right:solid 1px #bcbcbc"class="col-lg-4 col-sm-4 col-xs-6"> 
   <p style="text-align:center;
              
             font-family: 'Raleway', sans-serif;
             font-size:20px;"><%=product.Title%></p>
 <div><img src="<%=product.ImageMain%>" class="img-responsive" style="width:100%" alt="Image"></div><br>
    <p style="text-align:center;
              font-family: 'Nunito', sans-serif;
             font-size:15px;">Starting at <%=product.Price%>/-</p>
    
    <div class="row">
        <div style="text-align:center;font-family: 'Nunito', sans-serif;font-size:13px;">
      <div id="AddToCart" style=" background-color:#bcbcbc;
                                 transition: all 180ms ease-in;
                                 margin-top:10px;margin-bottom:10px;
                                 border-right:solid 20px white;
                                 border-left:solid 20px white;
                                 height:40px;"
                   class="col col-lg-6 col-xs-12"> 
   <div style="margin-top:10px;">
     <form action="/AddToCart/<%=product._id%>" method="post">
       <button style="background-color:#bcbcbc;color:black;border:solid 1px #bcbcbc ;">
          <i id="Add2cartIcon" style="font-size:17px" class="fa fa-cart-plus" aria-hidden="true">
     </i>
         Add To Cart</button>
     </form>
     
      </div></div>
      <div style="background-color:black;
                  margin-top:10px;margin-bottom:10px;
                  border-right:solid 20px white;
                  border-left:solid 20px white;
                  height:40px;" class="col col-lg-6 col-xs-12">
    <div style="margin-top:10px;"><a style="background-color:black;
                     color:white;
                   " href="/buy/<%=product._id%>">Buy Now <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a></div></div>
    </div>
    

 
    </div>
    
 </div>
    <%})%>
 
    </div>
  </div>
</div><br>

<br><br>

<footer style="background-color:black" class="container-fluid text-center">
  
 
</footer>

 
  <style>
    
    #AddToCart:hover{
      background-color:black;
      color:#bcbcbc;
      transition: all 180ms ease-in;
    }
    
  </style>
  
  
  
 <script>
   
 
   
  </script> 
  
  
  
  
</body>
</html>
